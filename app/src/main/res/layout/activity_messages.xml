<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context=".Messages"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

    <LinearLayout
        android:id="@+id/messageheader"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/message_sender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Sender Name"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"
            />
        <TextView
            android:id="@+id/message_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Time"
            android:gravity="end"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_below="@+id/messageheader"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            >

            <TextView
                android:id="@+id/message_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sender NameSender NameSender NameSenderNameSenderNameSenderNameSenderNameSender NameSender NameSender NameSender NameSender NameSender NameSender Name"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:lines="3"
                android:textColor="#000"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            >

            <Button
                android:id="@+id/more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:text="More"
                android:background="@drawable/more_button_background"
                android:textSize="10sp"
                />

        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>