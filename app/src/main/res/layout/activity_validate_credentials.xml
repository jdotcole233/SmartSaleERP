<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartsaleerp.smartsale.ValidateCredentials">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#c62828"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#f00"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:elevation="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/validation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validate your identity"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="13dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/validation_title"
                >

                <Spinner
                    android:id="@+id/list_of_schools"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_background_style"
                    />

                <EditText
                    android:id="@+id/client_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Student ID"
                    android:background="@drawable/input_background_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"
                    />

                <EditText
                    android:id="@+id/parent_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Phone Number"
                    android:background="@drawable/input_background_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"
                    />

                <CheckBox
                    android:id="@+id/rememberdevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remember my device"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="#7A7A7A"
                    />

                  <Button
                      android:id="@+id/validate_button"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:text="Validate"
                      android:layout_marginRight="10dp"
                      android:layout_marginLeft="10dp"
                      android:background="@drawable/smartsale_button_background"
                      android:textColor="#fff"
                      android:layout_marginBottom="10dp"
                      android:textSize="13sp"

                      />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request to join?"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"
                    android:textColor="#7A7A7A"
                    android:padding="0dp"
                    android:layout_marginTop="-10dp"
                    />




            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="from"
        android:gravity="center"
        android:layout_above="@+id/companyname"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="5dp"
        android:text="Hartet Technologies"
        android:textColor="#f00"
        android:textSize="13sp"
        app:fontFamily="sans-serif-smallcaps" />


</RelativeLayout>